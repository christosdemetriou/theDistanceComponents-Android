<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="recipe"
            type="uk.co.thedistance.slimmingworlddemo.rest.model.Recipe" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/recipe_image"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="177%"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/recipe_title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#8a000000"
                    android:padding="8dp"
                    android:text="@{recipe.title}"
                    android:textColor="@android:color/white"
                    tools:text="Recipe title" />
            </android.support.percent.PercentFrameLayout>

            <TextView
                android:id="@+id/recipe_description"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="8dp"
                android:text="@{TextUtils.isEmpty(recipe.shortIntro) ? recipe.globalIntroduction : recipe.shortIntro}" />

            <!-- ensure syns are bottom-aligned -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/recipe_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>